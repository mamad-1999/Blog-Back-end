{
  "compilerOptions": {
    "target": "es2018",

    "module": "CommonJS",
    "rootDir": ".",
    "moduleResolution": "node",

    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "useUnknownInCatchVariables": false,

    "skipLibCheck": true
  }
}
